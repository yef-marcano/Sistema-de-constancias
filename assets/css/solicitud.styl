/*
display: flex; /* or inline-flex
flex-direction: row | row-reverse | column | column-reverse;
justify-content: flex-start | flex-end | center | space-between | space-around;
align-items: flex-start | flex-end | center | baseline | stretch;
*/
alinear(foc,just,align)
	display flex
	flex-direction foc
	justify-content just
	align-items align
	
body
	width 100%
	margin 0
	margin-bottom 30px

header
	width 100%
	alinear(row,center,center)
	h1
		text-align center
		margin 0 15%
	a
		img
			width auto
			height 80px
	img
		height 100px
		width auto
section
	alinear(column,flex-start,initial)
	
#ingresar_datos
	margin-left 5%
	margin-bottom 1em
	h3
		font-size 1.5em
		margin-bottom 0
	input
		width 300px
		height 30px
		text-align center
		font-size 1em
button
	width 120px
	height 40px
	margin 0
	border-radius: 28px
	padding 10px 20px 10px 20px
	font-size 1em
	border 0
	background rgb(17,160,91)
button:hover
	background rgb(63,182,93)
	div
		height 1em;
		font-size 1.3em;
		margin-top 0.3em

#datos
	align-self center
	alinear(column,center,initial)
	border 3px solid rgb(63,182,93)
	border-radius 20px
	padding-left 10px
	width 50%

	legend
		text-align center
		h3
			font-size 2em

	label
		font-size 1.3em
		display block
		width 100%
		text-align left
		color rgb(19,160,92)
	div
		margin-top 10px
		margin-bottom 30px
		margin-left 100px
		height 1.3em
		font-size 1.3em
		font-style italic
	button
		margin-top 30px
		margin-bottom 30px
		width 250px
		height 40px
		font-size 1em
		align-self center
	a
		color black
		text-decoration none
